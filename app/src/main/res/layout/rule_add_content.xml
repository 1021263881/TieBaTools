<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<Spinner
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:id="@+id/ruleaddcontentRuleTypeSpinner"/>

	<android.support.design.widget.TextInputLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/ruleaddcontentRuleTypeSpinner"
		android:id="@+id/ruleaddcontentTextInputLayout1">

		<android.support.design.widget.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="请输入规则"
			android:id="@+id/ruleaddcontentRuleEditText"/>

	</android.support.design.widget.TextInputLayout>

	<CheckBox
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_below="@id/ruleaddcontentTextInputLayout1"
		android:text="不"
		android:id="@+id/ruleaddcontentRevCheck"/>

	<Spinner
		android:layout_height="48dp"
		android:layout_width="wrap_content"
		android:layout_toRightOf="@id/ruleaddcontentRevCheck"
		android:layout_below="@id/ruleaddcontentTextInputLayout1"
		android:id="@+id/ruleaddcontentMatchTypeSpinner"/>

	<CheckBox
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_toRightOf="@id/ruleaddcontentRuleTypeSpinner"
		android:text="使用正则表达式"/>

	<CheckBox
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_toRightOf="@id/ruleaddcontentMatchTypeSpinner"
		android:layout_below="@id/ruleaddcontentTextInputLayout1"
		android:text="忽略大小写"/>

	<android.support.design.widget.TextInputLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/ruleaddcontentMatchTypeSpinner"
		android:id="@+id/ruleaddcontentTextInputLayout2">

		<android.support.design.widget.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="请输入测试内容"
			android:id="@+id/ruleaddcontentTestEditText"/>

	</android.support.design.widget.TextInputLayout>

	<Button
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="测试"
		android:layout_below="@id/ruleaddcontentTextInputLayout2"
		android:id="@+id/ruleaddcontentTestButton"/>

</RelativeLayout>

